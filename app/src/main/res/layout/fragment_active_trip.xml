<!-- Wrapping the layout into /layout to make it available with data binding. -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Data to make available to the XML via data binding. In this case,
     the whole ViewModel, so that we can access the LiveData,
     click handlers, and state variables. -->
    <data>

        <variable
            name="tripTrackerViewModel"
            type="com.sechnick.mileage_autotracker.triptracker.TripTrackerViewModel" />

        <variable
            name="trip"
            type="com.sechnick.mileage_autotracker.database.RecordedTrip" />

        <variable
            name="distance"
            type="Double" />

        <variable
            name="thisDistance"
            type="Double" />


    </data>

    <!-- Start of the visible fragment layout using ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".triptracker.ActiveTripFragment">

        <Button
            android:id="@+id/buttonStopTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> tripTrackerViewModel.onStopActiveScreen()}"
            android:text="Stop Trip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextComments" />

        <TextView
            android:id="@+id/textActiveDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Active_button_continue"
            tools:text="Distance" />

        <!--            app:tripDistance="@{distance}"-->

        <TextView
            android:id="@+id/textstaticActiveElapsedDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Elasped Distance"
            app:layout_constraintBaseline_toBaselineOf="@+id/textActiveDistance"
            app:layout_constraintEnd_toStartOf="@+id/textActiveDistance" />

        <TextView
            android:id="@+id/textActiveElapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="4dp"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textActiveDistance"
            app:tripDuration="@{trip}"
            tools:text="03:30" />

        <TextView
            android:id="@+id/textstaticActiveElapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Elasped Time"
            app:layout_constraintBaseline_toBaselineOf="@+id/textActiveElapsedTime"
            app:layout_constraintEnd_toStartOf="@+id/textActiveElapsedTime" />

        <ImageView
            android:id="@+id/imageArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="376dp"
            android:contentDescription="GPS arrow"
            android:rotation="45.0"
            android:src="@drawable/ic_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switchBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp"
            android:checked="@={trip.businessTrip}"
            android:text="@string/business"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextComments"
            android:layout_width="335dp"
            android:layout_height="191dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Comments"
            android:inputType="textMultiLine"
            android:text="@={trip.comments}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textActiveElapsedTime" />

        <TextView
            android:id="@+id/textThisDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Distance" />

        <Button
            android:id="@+id/Active_button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> tripTrackerViewModel.onActiveStart()}"
            android:text="Start New Trip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Active_button_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> tripTrackerViewModel.onActiveContinue()}"
            android:text="Continue Trip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
